---
interface Props {
    file: string;
    title?: string;
}

const { file, title = "PDF Document" } = Astro.props;
const filePath = `/pdfs/${file}`;
---

<div class="w-full aspect-3/4 md:aspect-4/3 border border-text-muted/50 rounded-lg overflow-hidden my-6 bg-bg-surface relative group">
    <iframe 
        src={filePath} 
        class="w-full h-full border-0" 
        title={title}
        loading="lazy"
    >
    </iframe>

    <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
        <a href={filePath} download class="bg-brand text-bg-main text-xs font-bold px-3 py-1 rounded shadow-md hover:bg-brand-light no-underline">
            Download PDF
        </a>
    </div>
</div>