---
interface Props {
    title: string;
    href: string;
    description?: string;
    date?: Date;
    backgroundImage?: string;
}

const {
    title,
    href,
    description,
    date,
    backgroundImage,
} = Astro.props;

const formattedDate = date?.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
});

const cardBackground = backgroundImage ? "bg-transparent" : "bg-bg-surface";
---

<a 
    href={href} 
    class=`group relative block ${cardBackground} border border-text-muted/30 rounded-xl p-6 transition-all duration-300 hover:border-brand hover:-translate-y-1 hover:shadow-lg no-underline h-full`
>
    {backgroundImage && (
        <div class="absolute inset-0 z-0">
            <div
                class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-105"
                style={`background-image: url(${backgroundImage})`}
            ></div>
            <div class="absolute inset-0 bg-bg-main/85 backdrop-blur-sm transition-opacity duration-300 group-hover:bg-bg-main/75"></div>
        </div>
    )}

    <div class=`relative h-full overflow-hidden rounded-xl border border-text-muted/30 p-6 transition-all duration-300 transform-gpu group-hover:-translate-y-1 group-hover:shadow-xl group-hover:border-brand ${cardBackground}` style="transform: translateZ(0); -webkit-mask-image: -webkit-radial-gradient(white, black);" >
        <h3 class="text-xl font-bold text-brand-light group-hover:text-brand mb-2 mt-0">
            {title}
        </h3>
        
        {date && (
            <p class="text-sm text-text-muted mb-4 mt-0">
                {formattedDate}
            </p>
        )}

        {description && (
            <p class="text-text-main line-clamp-3 leading-relaxed mt-0">
                {description}
            </p>
        )}
    </div>
</a>